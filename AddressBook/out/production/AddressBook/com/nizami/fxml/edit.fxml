<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="160.0" prefWidth="241.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nizami.controllers.EditDialogController">
   <children>
      <Label text="ФИО">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtFIO" prefHeight="25.0" prefWidth="212.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <Label text="Телефон">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtPhone" prefHeight="25.0" prefWidth="190.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <HBox prefHeight="0.0" prefWidth="241.0">
         <children>
            <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#actionSave" prefHeight="38.0" prefWidth="78.0" text="Ок">
               <HBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnCancel" cancelButton="true" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#actionClose" prefHeight="38.0" prefWidth="78.0" text="Отмена" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="30.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
